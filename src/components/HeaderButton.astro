---
interface Props {
    href?: string
}

const {href} = Astro.props
---

<a href={href} class="flex-row justify-center text-white cursor-pointer hover:bg-slate-700 focus:ring-4 focus:outline-none focus:ring-[#111827]/50 font-medium rounded-lg px-5 py-3 text-center inline-flex items-center dark:focus:ring-[#111827]/60 mr-2 mb-2 hover:scale-110 scale-90 gap-x-2 opacity-70 hover:opacity-90"
>
    <slot name="before"/>
    <slot/>
    <slot name="after"/>
</a>
 